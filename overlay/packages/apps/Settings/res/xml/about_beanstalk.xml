<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/about_beanstalk"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
        android:key="about"
        android:title="@string/about_beanstalk">

        <!-- Changelog -->
        <PreferenceScreen
            android:key="changelog"
            android:title="@string/changelog_beanstalk_title"
            android:fragment="com.android.settings.beanstalk.Changelog" />

        <!-- Donation -->
        <Preference
            android:key="beanstalk_donation"
            android:title="@string/beanstalk_donation_title"
            android:summary="@string/beanstalk_donation_summary" />

	<!-- Slack -->
        <Preference
            android:key="slack"
            android:title="@string/join_slack_title"
            android:summary="@string/join_slack_summary" />

        <!-- Share -->
        <Preference
            android:key="share"
            android:title="@string/share_beanstalk_title"
            android:summary="@string/share_beanstalk_summary" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="web"
        android:title="@string/beanstalk_on_web">

        <!-- downloads -->
        <Preference
            android:key="beanstalk_downloads"
            android:title="@string/beanstalk_downloads_title"
            android:summary="@string/beanstalk_downloads_summary" />

        <!-- Github -->
        <Preference
            android:key="beanstalk_source"
            android:title="@string/beanstalk_source_title"
            android:summary="@string/beanstalk_source_summary" />

        <!-- Facebook -->
        <Preference
            android:key="beanstalk_facebook"
            android:title="@string/beanstalk_facebook_title"
            android:summary="@string/beanstalk_facebook_summary" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="developer_information"
        android:title="@string/information_about_developer">

        <!-- developer information -->
        <Preference
            android:key="developer"
            android:title="Krassermensch"
            android:summary="@string/developer_description" />

    </PreferenceCategory>

</PreferenceScreen>

